<launch>
    <arg name="sim" default="true"/>
    <param name="use_sim_time" value="$(arg sim)"/>

    <arg name="veh" default="/"/> 

    <!-- LOAM Visual Odometry -->
    <group ns="$(arg veh)">
        <group ns="loam">
            <node pkg="tf" type="static_transform_publisher" name="camera_init_to_map"  args="0 0 0 1.570795   0        1.570795 /odom    /camera_init 10" />
            <node pkg="tf" type="static_transform_publisher" name="base_link_to_camera" args="0 0 0 -1.570795 -1.570795 0        /camera /base_link   10" />
            <remap from="velodyne_points" to="/velodyne_points"/>
            <include file="$(find lego_loam)/launch/run.launch">
            </include>
        </group>


        <node pkg="robot_localization" type="ukf_localization_node" name="ukf_se" clear_params="true">
            <rosparam command="load" file="$(find ugv)/params/ukf.yaml" />
        </node>

    </group>

</launch>